[
  {
    "testName": "Successful Login",
    "endpoint": "/login",
    "method": "POST",
    "body": {
      "username": "admin@gmail.com",
      "password": "admin"
    },
    "expectedStatus": 200,
    "expectedResponse": { "success": true }
  },
  {
    "testName": "Invalid Password",
    "endpoint": "/login",
    "method": "POST",
    "body": {
      "username": "admin@gmail.com",
      "password": "wrongpassword"
    },
    "expectedStatus": 400,
    "expectedResponse": { "success": false, "message": "Invalid credentials" }
  },
  {
    "testName": "User Not Found",
    "endpoint": "/login",
    "method": "POST",
    "body": {
      "username": "unknown@gmail.com",
      "password": "admin"
    },
    "expectedStatus": 404,
    "expectedResponse": { "success": false, "message": "User not found" }
  },
  {
    "testName": "Successful Registration",
    "endpoint": "/register",
    "method": "POST",
    "body": {
      "username": "newuser@gmail.com",
      "password": "password123"
    },
    "expectedStatus": 201,
    "expectedResponse": { "success": true, "message": "User registered" }
  },
  {
    "testName": "Get All Orders",
    "endpoint": "/orders",
    "method": "GET",
    "body": {},
    "expectedStatus": 200,
    "expectedResponse": { "orders": [] }
  },
  {
    "testName": "Add Product",
    "endpoint": "/products/add",
    "method": "POST",
    "body": {
      "name": "New Product",
      "price": 100
    },
    "expectedStatus": 201,
    "expectedResponse": { "success": true, "message": "Product added successfully" }
  }
]
